
<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row top-form">
        <div class="form-area">
          <p class="form-area-title">Potepan Shareでまだ体験したことのない旅をしよう</p>
          <%= form_with url: search_rooms_path, method: :get do |f| %>
            <label>エリア</label>
            <%= f.text_field :keyword, class: "top-input", placeholder: "東京" %>
            <%= f.submit"探す", class: "btn top-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container top-container">
    <div class="panel-area">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="row row-panel">
        <div class="panel-item">
          <span>東京</span>
          <%= link_to(search_rooms_path(room_address: "%東京%", method: :get)) do %>
            <%= image_tag 'img_tokyo.jpeg', class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item">
          <span>大阪</span>
          <%= link_to(search_rooms_path(room_address: "%大阪%", method: :get)) do %>
            <%= image_tag 'img_osaka.jpeg', class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item">
          <span>京都</span>
          <%= link_to(search_rooms_path(room_address: "%京都%", method: :get)) do %>
            <%= image_tag 'img_kyoto.jpeg', class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item">
          <span>札幌</span>
          <%= link_to(search_rooms_path(room_address: "%札幌%", method: :get)) do %>
            <%= image_tag 'img_sapporo.jpeg', class: "panel-image" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>