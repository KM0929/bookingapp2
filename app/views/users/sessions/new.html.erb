<div class="devise-container">
  <div class="devise-frame">
    <p class="user-resitration">ログイン</p>
    <div class="devise-inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-row">
          <div class="required-icon"></div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "user-input-area" %>
        </div>

        <div class="field form-row">
          <div class="reqired-icon"></div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "user-input-area" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn user-btn" %>
        </div>
      <% end %>
    </div>

    <%= link_to "新しいアカウントを作成", new_user_registration_path %>
  </div>
</div>