<div class="devise-container">
  <div class="devise-frame">
    <h2>アカウント編集</h2>
    <div class="devise-inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-input-area edit-input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :変更後パスワード（変更する場合のみ記入） %>
          <%= f.password_field :password, autocomplete: "new-password", class: "user-input-area edit-input" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認用（変更する場合のみ記入） %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user-input-area edit-input" %>
        </div>

        <div class="field">
          <%= f.label :現在のパスワード %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "user-input-area edit-input" %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: "btn edit-btn" %>
        </div>
      <% end %>

      <%= link_to "戻る", :back, class: "btn edit-btn-back" %>
    </div>
  </div>
</div>